
	<%= form_with model: @user, url: third_path do |form|%>
	<div class="mb-3">
		<%= form.label :Name%>
	<%= form.text_field :name,  class:"form-control" %>
	<% @user.errors.full_messages_for(:name).each do |message|%>
	<div> <%= message%> </div>
	<%end%>
	</div>

	<div class="mb-3">
		<%= form.label :age%>
	<%= form.text_field :age, class:"form-control" %>
	<% @user.errors.full_messages_for(:age).each do |message|%>
	<div> <%= message%> </div>
	<%end%>
	</div>

	<div class="mb-3">
		<%= form.submit "SignUp", class:"btn btn-primary " %>
		</div>
	<% end%>

